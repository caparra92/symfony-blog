{% extends 'base.html.twig' %}

{% block title %}Categories
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-3 mx-auto m-5">
                <a class="btn btn-primary m-2" href="{{path('category-create')}}">
				    <i class="fa fa-plus"> New Category</i>
				</a>
				<table class="table table-striped m-5">
					<thead>
						<tr>
							<th>Name</th>
							<th>Description</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
                        {% for category in categories %}
                        <tr>
                            <td>{{category.name}}</td>
                            <td>{{category.description}}</td>
                            <td width="20%">
                                <a class="btn btn-warning" href="categories/edit/{{category.id}}">
									<i class="fa fa-edit"></i>
								</a>
								<a class="btn btn-danger"  href="categories/delete/{{category.id}}" onclick="return confirm('Are you sure you want to delete this category?')">
									<i class="fa fa-trash"></i>
								</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
